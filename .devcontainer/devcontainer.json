{
  "name": "PostgreSQL Interview Environment",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "forwardPorts": [5432, 5050],
  "portsAttributes": {
    "5050": {
      "label": "pgAdmin",
      "onAutoForward": "openBrowser"
    },
    "5432": {
      "label": "PostgreSQL"
    }
  },
  "postCreateCommand": "sleep 10 && docker-compose exec -T db psql -U devtedsuser -d demodb -f /docker-entrypoint-initdb.d/init.sql",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-ossdata.vscode-postgresql"
      ]
    }
  }
}
